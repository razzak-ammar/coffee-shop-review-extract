// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../reviews.db"
}

model Review {
  id            Int          @id @default(autoincrement())
  title         String
  text          String
  coffeehouse   CoffeeHouse? @relation(fields: [coffeeHouseId], references: [id])
  coffeeHouseId Int
  Keyword       Keyword[]
}

model Keyword {
  id       Int    @id @default(autoincrement())
  phrase   String
  review   Review @relation(fields: [reviewId], references: [id])
  reviewId Int
}

model CoffeeHouse {
  id     Int      @id @default(autoincrement())
  name   String
  url    String
  Review Review[]
  region String   @default("Unknown")
}
